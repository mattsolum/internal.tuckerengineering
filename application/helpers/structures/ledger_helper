<?php defined('BASEPATH') OR exit('No direct script access allowed');

class StructLedger
{
	public $ledger_id		= NULL;
	public $client_id		= NULL;
	public $job_id			= NULL;

	public $item			= NULL;
	public $amount			= 0.0;

	public $date_added		= NULL;
	public $date_updated	= NULL;

	public function __toString()
	{
		return $amount;
	}
}